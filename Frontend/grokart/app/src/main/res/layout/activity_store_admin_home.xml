<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/constraint_background_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_in"
    android:foregroundTintMode="src_in">

    <TextView
        android:id="@+id/tv_main_welcome2"
        android:layout_width="298dp"
        android:layout_height="37dp"
        android:layout_marginTop="36dp"
        android:text="@string/welcome_user"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_admHome_title2" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Grokart.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Grokart.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/btn_storeItems"
        style="@style/white_button"
        android:layout_width="317dp"
        android:layout_height="64dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp"
        android:text="Store Items"
        app:cornerRadius="10dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_reports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_reports"
        style="@style/white_button"
        android:layout_width="317dp"
        android:layout_height="64dp"
        android:layout_marginBottom="50dp"
        android:text="Reports"
        app:cornerRadius="10dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_admHome_title2"
        android:layout_width="201dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/k2d_bold"
        android:text="@string/groKart"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/shapes"
        android:foregroundTint="#F8F8F8"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_welcome2">

        <TextView
            android:id="@+id/tv_userCountTitle"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/white"
            android:backgroundTintMode="src_atop"
            android:paddingTop="10dp"
            android:text="@string/user_count_title"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_userCount"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/shapes"
        android:foregroundTint="#F8F8F8"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_welcome2">

        <TextView
            android:id="@+id/tv_itemCountTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:text="Item Count"
            android:textAlignment="center"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_itemCount"
            android:layout_width="154dp"
            android:layout_height="63dp"
            android:background="@color/white"
            android:baselineAligned="false"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>