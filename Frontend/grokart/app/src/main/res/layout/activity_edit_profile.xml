<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_editProfileTitle"
        android:layout_width="277dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/k2d_bold"
        android:text="@string/edit_profile"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"

        android:layout_marginStart="52dp"
        android:layout_marginTop="25dp"
        android:lineSpacingExtra="-9sp"
        android:text="@string/name"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfileTitle" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:backgroundTint="#D9D9D9"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="183dp"
        android:layout_height="28dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:text="@string/prompt_email"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:backgroundTint="#D9D9D9"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="@string/prompt_email"
        android:inputType="textWebEmailAddress"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"

        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="-9sp"
        android:text="@string/phone"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:backgroundTint="#D9D9D9"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="phone"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

    <TextView
        android:id="@+id/tv_preferredStore"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"

        android:layout_marginStart="52dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="-9sp"
        android:text="@string/preferred_store"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phone" />

    <EditText
        android:id="@+id/et_preferredStore"
        android:layout_width="305dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@color/teal_700"
        android:backgroundTint="#D9D9D9"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:hint="@string/preferred_store"
        android:inputType="textShortMessage"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_preferredStore" />

    <Button
        android:id="@+id/btn_editProfile"
        android:layout_width="184dp"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/green"
        android:backgroundTintMode="@color/green_logo"
        android:text="@string/edit_profile"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_preferredStore" />

    <TextView
        android:id="@+id/msgResponse"
        android:layout_width="359dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_editProfileTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>