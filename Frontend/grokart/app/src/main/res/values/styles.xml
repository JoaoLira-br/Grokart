<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="constraint_background_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F0F0F0</item>
    </style>

    <style name="white_button">
        <item name="android:layout_width">317dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="green_button">
        <item name="android:layout_width">184dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:backgroundTintMode">@color/green_logo</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_heading">
        <item name="android:layout_width">234dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item_Style">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginTop">108dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="Item_Style_constraintLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Alternative_Main_Titles">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>